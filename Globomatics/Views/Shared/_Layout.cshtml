<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <link asp-href-include="css/*" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&amp;subset=cyrillic" rel="stylesheet">
</head>
<body>
    <div class="logo">
        <a asp-action="Index" asp-controller="Conference">
            <img asp-append-version="true" src="~/img/logo.png" alt="logo" class="logo logo-img" />
            <div class="title">
                Globomatics
            </div>
        </a>
    </div>
    <nav class="navbar">
        @RenderSection("Register", false)
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer>
        @RenderSection("Statistics", false)
    </footer>
    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/jquery/jquery.js"></script>     
    </environment>
    <environment exclude="Development">
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/jquery.min.js"></script>
    </environment>
    @RenderSection("Scripts", false)
</body>
</html>
