@using Shared.Models
@model ConferenceModel

<form asp-action="Add" >
    <div class="row">
        <div class="form-group">
            <input asp-for="@Model.Id" type="hidden" class="form-control" />
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Location"></label>
            <input asp-for="@Model.Location" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Start"></label>
            <input asp-for="@Model.Start" class="form-control"  />
        </div>
        <div class="form-group">
            <label asp-for="@Model.AttendeeTotal"></label>
            <input asp-for="@Model.AttendeeTotal" class="form-control"  />
        </div>
        <div class="form-group button">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</form>

<div class="row">
    <div class="">
        <a asp-action="Index" class="btn btn-default">Back</a>
    </div>
</div>